<Window x:Name="Main" x:Class="DigitalSoap.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:da="clr-namespace:DigitalSoap"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalSoap"
        mc:Ignorable="d"
        Title="Digital Soap" Height="622" Width="840" MinWidth="840" MinHeight="632" SizeChanged="Main_SizeChanged"
        Background="{StaticResource Dark_BorderBrush}"
        WindowStyle="None" Closing="Main_Closing">
    <Window.DataContext>
        <da:ContextTitle/>
    </Window.DataContext>
    <Window.Resources>
        <Storyboard x:Key="Storyboard" BeginTime="00:00:00.000" Duration="00:00:05.000" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="CleanSpinnerImg"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0" To="360" BeginTime="00:00:00.00" Duration="00:00:05.000"/>
        </Storyboard>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" CornerRadius="1" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid MinHeight="560">
        <Grid.RowDefinitions>
            <RowDefinition Height="36" MinHeight="36" MaxHeight="36"/>
            <RowDefinition Height="84" MinHeight="84" MaxHeight="84"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="TitleGrid" Height="36" Background="{DynamicResource WindowGradientFill}" Grid.Row="0" MouseLeftButtonDown="TitleGrid_MouseLeftButtonDown">
            <Image Source="/Resources/Images/Logo_Square.png" Width="28" Height="28" HorizontalAlignment="Left"
                   Margin="12,2,0,0"/>
            <Label Foreground="{DynamicResource Dark_SecondaryBrush}" FontWeight="Bold" FontSize="16.0" 
                           Margin="40,4,0,0">Digital Soap</Label>
            <Button x:Name="WinExitButton" HorizontalAlignment="Right" Width="24" Height="24" Content="X" Margin="0,-2,6,0"
                    OverridesDefaultStyle="True" Click="WinExitButton_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Foreground" Value="{DynamicResource Dark_TextLightBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Canvas Margin="0,0,0,0" Name="Border">
                                        <ContentPresenter x:Name="ContentSite"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Content="{TemplateBinding Content}"
                                          Margin="8,4,4,4"/>
                                   </Canvas>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Dark_SecondaryLightBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Dark_SecondaryBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="WinMaxButton" HorizontalAlignment="Right" Width="24" Height="24" Content="[  ]" 
                    VerticalContentAlignment="Top" Margin="0,-2,30,0"
                    OverridesDefaultStyle="True" Click="WinMaxButton_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Foreground" Value="{DynamicResource Dark_TextLightBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Canvas Margin="0,0,0,0" Name="Border">
                                        <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              Margin="8,3,4,4"/>
                                    </Canvas>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Dark_SecondaryLightBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Dark_SecondaryBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="WinMinButton" HorizontalAlignment="Right" Width="24" Height="24" Content="__" 
                    VerticalContentAlignment="Top" Margin="0,-2,50,0"
                    OverridesDefaultStyle="True" Click="WinMinButton_Click">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Foreground" Value="{DynamicResource Dark_TextLightBrush}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Canvas Margin="0,0,0,0" Name="Border">
                                        <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              Content="{TemplateBinding Content}"
                                              Margin="8,3,4,4"/>
                                    </Canvas>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Dark_SecondaryLightBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Dark_SecondaryBrush}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <Grid x:Name="grid" Height="84" Background="{DynamicResource Dark_BorderBrush}" Grid.Row="1">
            <StackPanel Name="TitlePanel" Orientation="Vertical" VerticalAlignment="Bottom">
                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                    <Label x:Name="GitHubLabel" FontSize="12.0" 
                           Margin="12,-0,0,0" Cursor="Hand" PreviewMouseLeftButtonDown="GitHubLabel_PreviewMouseLeftButtonDown">
                        <Label.Foreground>
                            <LinearGradientBrush x:Name="GithubForegroundBrush" StartPoint="0,0"
                                    EndPoint="0,1">
                                <LinearGradientBrush.GradientStops>
                                    <GradientStopCollection>
                                        <GradientStop Color="{DynamicResource Dark_TextLight}" Offset="0.0"/>
                                        <GradientStop Color="{DynamicResource Dark_SecondaryLight}" Offset="0.5"/>
                                        <GradientStop Color="{DynamicResource Dark_SecondaryDark}" Offset="0.9" />
                                    </GradientStopCollection>
                                </LinearGradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Label.Foreground>
                        <Label.Triggers>
                            <EventTrigger RoutedEvent="Window.Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            From="{DynamicResource Dark_TextLight}"
                                            To="{DynamicResource Dark_SecondaryDark}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            BeginTime="00:00:01.00"
                                            From="{DynamicResource Dark_SecondaryDark}"
                                            To="{DynamicResource Dark_SecondaryLight}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            BeginTime="00:00:02.00"
                                            From="{DynamicResource Dark_SecondaryLight}"
                                            To="{DynamicResource Dark_TextLight}"
                                            AutoReverse="False">
                                        </ColorAnimation>

                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            From="{DynamicResource Dark_SecondaryLight}"
                                            To="{DynamicResource Dark_TextLight}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            BeginTime="00:00:01.00"
                                            From="{DynamicResource Dark_TextLight}"
                                            To="{DynamicResource Dark_SecondaryDark}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            BeginTime="00:00:02.00"
                                            From="{DynamicResource Dark_SecondaryDark}"
                                            To="{DynamicResource Dark_SecondaryLight}"
                                            AutoReverse="False">
                                        </ColorAnimation>

                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            From="{DynamicResource Dark_SecondaryDark}"
                                            To="{DynamicResource Dark_SecondaryLight}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            BeginTime="00:00:01.00"
                                            From="{DynamicResource Dark_SecondaryLight}"
                                            To="{DynamicResource Dark_TextLight}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                        <ColorAnimation
                                            Storyboard.TargetName="GithubForegroundBrush"
                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                            Duration="00:00:01.00"
                                            RepeatBehavior="1x"
                                            BeginTime="00:00:02.00"
                                            From="{DynamicResource Dark_TextLight}"
                                            To="{DynamicResource Dark_SecondaryDark}"
                                            AutoReverse="False">
                                        </ColorAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Label.Triggers>
                        <TextBlock TextDecorations="Underline">
                            https://github.com/STOL4S
                        </TextBlock>
                    </Label>
                    <Label Name="VersionLabel" Foreground="{DynamicResource Dark_TextBrush}" FontSize="12.0"
                           Margin="12,-8,0,0">Debug v0.1.1a</Label>
                    <Label Height="6"></Label>
                </StackPanel>
            </StackPanel>
            <TextBlock Name="SystemInfoLabel" Foreground="{DynamicResource Dark_TextBrush}" FontSize="12.0" 
                       HorizontalAlignment="Right" Margin="0,0,6,0" Text="Microsoft Windows 11 Home 64-bit (Admin)" VerticalAlignment="Center"/>
        </Grid>

        <TabControl Name="MainTabControl" TabStripPlacement="Left" Grid.Row="2"
                    BorderBrush="{DynamicResource Dark_BorderBrush}" 
                    Background="{DynamicResource Dark_ControlBrush}">
            <TabItem Name="CustomCleanTab" BorderBrush="{DynamicResource Dark_BackgroundBrush}"
                     Background="{DynamicResource VerticalGradientFill}" Style="{StaticResource MainTabItemStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Vertical">
                        <Image Name="CustomCleanTabImg" Height="32" Width="32" 
                               Margin="0,16,0,2" Source="Resources/Images/ReportProjectWizard.png"/>
                        <TextBlock Text="Clean" Margin="0,0,0,12" VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="{DynamicResource Dark_ControlBrush}"
                      Margin="0,0,1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="279*"/>
                        <ColumnDefinition Width="427*"/>
                    </Grid.ColumnDefinitions>

                    <TreeView Name="CustomCleanListView" Grid.Column="0"
                              BorderBrush="{DynamicResource Dark_BorderBrush}"
                              Background="{DynamicResource Dark_ControlBrush}">
                        <TreeView.ContextMenu>
                            <ContextMenu Name="CleanContextMenu" StaysOpen="True"
                                         Uid="Clean Tree View">
                                <MenuItem x:Name="CleanContext_CheckAllButton" Header="Check All" Click="CleanContext_CheckAllButton_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Resources/Images/CheckBoxGroup.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="CleanContext_UncheckAllButton" Header="Uncheck All" Click="CleanContext_UncheckAllButton_Click">
                                    <MenuItem.Icon>
                                        <Image Source="Resources/Images/CheckBoxUncheckGroup.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator Background="{DynamicResource Dark_BorderBrush}"/>
                                <MenuItem Header="Expand All">
                                    <MenuItem.Icon>
                                        <Image Source="Resources/Images/ExpandAll.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Collapse All">
                                    <MenuItem.Icon>
                                        <Image Source="Resources/Images/CollapseAll.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator Background="{DynamicResource Dark_BorderBrush}"/>
                                <MenuItem Header="Applications...">
                                    <MenuItem.Icon>
                                        <Image Source="Resources/Images/ApplicationGroup.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Custom Folders...">
                                    <MenuItem.Icon>
                                        <Image Source="Resources/Images/FolderOpened.png"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </TreeView.ContextMenu>
                        <TreeView.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                             Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                             Color="{StaticResource Dark_Text}"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                             Color="Transparent"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                             Color="{StaticResource Dark_Text}"/>
                        </TreeView.Resources>
                        <TreeViewItem Name="ApplicationsHeader" Focusable="False" Margin="0,4,0,2" IsExpanded="True">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/ApplicationGroup.png" Margin="0,1,0,0"/>
                                    <TreeViewItem Header="Applications"  Focusable="False" Margin="-13,0,0,0" FontWeight="Bold"
                                                  Foreground="{DynamicResource Dark_TextLightBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Header>
                            <TreeViewItem.Items>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox IsChecked="False"  Focusable="False" Margin="0,3,-12,0"/>
                                    <TreeViewItem Name="Clean_NoAppNode" Header="No Applications Founds" Focusable="False"
                                                  Margin="0,1,0,0" Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Items>
                        </TreeViewItem>

                        <TreeViewItem Name="CustomFolderHeader" Margin="0,4,0,2" IsExpanded="True">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/FolderOpened.png" Margin="0,1,0,0"/>
                                    <TreeViewItem Header="Custom Folders" Margin="-13,0,0,0" FontWeight="Bold"
                                                  Foreground="{DynamicResource Dark_TextLightBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Header>
                            <TreeViewItem.Items>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_NoCustomFolder" Header="None"
                                                   Foreground="{DynamicResource Dark_TextBrush}"
                                                  Margin="0,0,0,0"/>
                                </StackPanel>
                            </TreeViewItem.Items>
                        </TreeViewItem>

                        <TreeViewItem Name="EdgeHeader" Margin="0,3,0,2" IsExpanded="True">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/MicrosoftEdge.png" Margin="-1,1,0,0"/>
                                    <TreeViewItem Header="Edge Chromium" Margin="-13,0,0,0" FontWeight="Bold"
                                                  Foreground="{DynamicResource Dark_TextLightBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Header>
                            <TreeViewItem.Items>
                                <StackPanel Orientation="Horizontal" Margin="4,3,0,2">
                                    <CheckBox Name="Clean_EAutoBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_EAutoNode" Header="Autocomplete History"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_ECookiesBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_ECookiesNode"  Header="Cookies"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_EHistoryBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_EHistoryNode"  Header="History"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_EImageBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_EImageNode" Header="Image Cache"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_EDatabaseBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_EDatabaseNode" Header="Indexed Database Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_ESessionBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_ESessionNode" Header="Session"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_EPasswordBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_EPasswordNode" Header="Saved Passwords"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_ETempBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Name="Clean_ETempNode" Header="Temporary Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Items>
                        </TreeViewItem>

                        <TreeViewItem Name="InternetHeader" Margin="0,2,0,2" IsExpanded="True">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/WebAPI.png" Margin="0,1,0,0"/>
                                    <TreeViewItem Header="Internet Explorer" Margin="-13,0,0,0" FontWeight="Bold"
                                                  Foreground="{DynamicResource Dark_TextLightBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Header>
                            <TreeViewItem.Items>
                                <StackPanel Orientation="Horizontal" Margin="4,3,0,2">
                                    <CheckBox Name="Clean_IAutoBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Autocomplete History"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_ICookiesBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Cookies"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_IHistoryBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="History"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_IImageBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Image Cache"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_IDatabaseBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Indexed Database Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_IPasswordBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Saved Passwords"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_ITempBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Temporary Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Items>
                        </TreeViewItem>

                        <TreeViewItem Name="SystemHeader" Margin="0,2,0,2" IsExpanded="True">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/SystemInfo.png" Margin="0,1,0,0"/>
                                    <TreeViewItem Header="System" Margin="-13,0,0,0" FontWeight="Bold"
                                                  Foreground="{DynamicResource Dark_TextLightBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Header>
                            <TreeViewItem.Items>
                                <StackPanel Orientation="Horizontal" Margin="4,3,0,2">
                                    <CheckBox Name="Clean_SysClipBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Clipboard"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysErrorBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Error Reports"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysEventBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Event Log Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysDumpBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Memory Dumps"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysRecycleBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Recycle Bin"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysLogBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="System Log Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysTempBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Temporary Files" Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysWebBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Web Cache"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysWinLogBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Windows Log Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="4,2,0,2">
                                    <CheckBox Name="Clean_SysReportBox" IsChecked="False" Margin="0,2,-12,0"/>
                                    <TreeViewItem Header="Windows Report Files"
                                                   Foreground="{DynamicResource Dark_TextBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Items>
                        </TreeViewItem>

                        <TreeViewItem Name="WindowsHeader" Margin="0,2,0,2" IsExpanded="True">
                            <TreeViewItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/FolderClosed.png" Margin="0,1,0,0"/>
                                    <TreeViewItem Header="Windows Explorer" Margin="-13,0,0,0" FontWeight="Bold"
                                                  Foreground="{DynamicResource Dark_TextLightBrush}"/>
                                </StackPanel>
                            </TreeViewItem.Header>
