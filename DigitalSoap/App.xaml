                    <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.375"/>
                    <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.500"/>
                    <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.625"/>
