                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="1.0"/>
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ListViewItemHighlightGradientFill"
                            StartPoint="0,0" EndPoint="0,1">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="0.22"/>
                    <GradientStop Color="{DynamicResource Dark_ControlSurface}" Offset="0.88"/>
                    <GradientStop Color="{DynamicResource Dark_ControlSurface}" Offset="1.0"/>
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ListViewItemSelectedGradientFill"
                    StartPoint="0,0" EndPoint="0,1">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="{DynamicResource Dark_SecondaryDark}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="0.2"/>
