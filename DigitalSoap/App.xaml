                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorderBrush"
                                                Storyboard.TargetProperty="Color"
                                                Duration="00:00:00.500"
                                                RepeatBehavior="1x"
                                                From="{StaticResource Dark_Border}"
                                                To="{StaticResource Dark_SecondaryLight}"
                                                AutoReverse="False"/>
                                        </Storyboard>-->
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[4].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[5].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[6].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[7].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset3}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[8].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_Border}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset3}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.EnterActions>
                                <MultiTrigger.ExitActions>
                                    <StopStoryboard BeginStoryboardName="Button_ExitPressedAnim"/>
                                    <StopStoryboard BeginStoryboardName="Button_EnterPressedAnim"/>
                                    <!--<BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation
                                                Storyboard.TargetName="ButtonBorderBrush"
                                                Storyboard.TargetProperty="Color"
                                                Duration="00:00:00.500"
                                                RepeatBehavior="1x"
                                                From="{StaticResource Dark_SecondaryLight}"
                                                To="{StaticResource Dark_Border}"
                                                AutoReverse="False"/>
                                        </Storyboard>
                                    </BeginStoryboard>-->
                                    <BeginStoryboard>
                                        <Storyboard FillBehavior="HoldEnd">
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[4].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[5].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[6].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[7].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset3}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[8].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            To="{StaticResource Dark_Border}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset3}"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </MultiTrigger.ExitActions>
                            </MultiTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard x:Name="Button_EnterPressedAnim">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[4].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[5].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[6].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[1].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[7].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset3}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[8].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryLight}"
                                                            To="{StaticResource Dark_SecondaryDark}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset3}"
                                                            />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard x:Name="Button_ExitPressedAnim">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[4].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryDark}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[3].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryDark}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[5].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryDark}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset0}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[2].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryDark}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>
                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[6].(GradientStop.Color)"
                                                            Duration="{StaticResource ButtonHighlightDuration}"
                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryDark}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset1}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
