        <Color x:Key="Dark_TextDisabled">#996F00</Color>

        <SolidColorBrush x:Key="Dark_BackgroundBrush" Color="{DynamicResource Dark_Background}"/>
        <SolidColorBrush x:Key="Dark_ControlBrush" Color="{DynamicResource Dark_Control}"/>
        <SolidColorBrush x:Key="Dark_ControlDarkBrush" Color="{DynamicResource Dark_ControlDark}"/>
        <SolidColorBrush x:Key="Dark_ControlSurfaceBrush" Color="{DynamicResource Dark_ControlSurface}"/>
        <SolidColorBrush x:Key="Dark_BorderBrush" Color="{DynamicResource Dark_Border}"/>
        <SolidColorBrush x:Key="Dark_PrimaryBrush" Color="{DynamicResource Dark_Primary}"/>
        <SolidColorBrush x:Key="Dark_PrimaryDarkBrush" Color="{DynamicResource Dark_PrimaryDark}"/>
        <SolidColorBrush x:Key="Dark_PrimaryLightBrush" Color="{DynamicResource Dark_PrimaryLight}"/>
        <SolidColorBrush x:Key="Dark_SecondaryBrush" Color="{DynamicResource Dark_Secondary}"/>
        <SolidColorBrush x:Key="Dark_SecondaryDarkBrush" Color="{DynamicResource Dark_SecondaryDark}"/>
        <SolidColorBrush x:Key="Dark_SecondaryLightBrush" Color="{DynamicResource Dark_SecondaryLight}"/>
        <SolidColorBrush x:Key="Dark_TextBrush" Color="{DynamicResource Dark_Text}"/>
        <SolidColorBrush x:Key="Dark_TextLightBrush" Color="{DynamicResource Dark_TextLight}"/>
        <SolidColorBrush x:Key="Dark_TextDisabledBrush" Color="{DynamicResource Dark_TextDisabled}"/>
        
        <SolidColorBrush x:Key="PrimaryColorBrush" Color="{DynamicResource PrimaryColor}"/>
        <SolidColorBrush x:Key="PrimaryColorBrightBrush" Color="{DynamicResource PrimaryColorBright}"/>
        <SolidColorBrush x:Key="PrimaryColorDarkBrush" Color="{DynamicResource PrimaryColorDark}"/>
        <SolidColorBrush x:Key="PrimaryColorLightBrush" Color="{DynamicResource PrimaryColorLight}"/>
        
        <SolidColorBrush x:Key="SecondaryColorBrush" Color="{DynamicResource SecondaryColor}"/>
        <SolidColorBrush x:Key="SecondaryColorDarkBrush" Color="{DynamicResource SecondaryColorDark}"/>

