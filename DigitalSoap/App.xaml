                                              Width="7"
                                              Height="7"
                                              x:Name="CheckMark"
                                              SnapsToDevicePixels="False"
                                              StrokeThickness="2"
                                              Data="F1 M 0.468732,4.66838L 3.03345,7.95443L 7.28127,0.420569" Margin="1,0,0,0"
                                              Stretch="Fill">
                                            <Path.Stroke>
                                                <SolidColorBrush Color="{DynamicResource Dark_SecondaryLight}" />
                                            </Path.Stroke>
                                        </Path>
                                        <Path Visibility="Collapsed"
                                              Width="7"
                                              Height="7"
                                              x:Name="InderminateMark"
                                              SnapsToDevicePixels="False"
                                              StrokeThickness="2"
                                              Data="M 0 7 L 7 0">
                                            <Path.Stroke>
                                                <SolidColorBrush Color="{DynamicResource Dark_Text}" />
                                            </Path.Stroke>
                                        </Path>
                                    </Grid>
                                </Border>
