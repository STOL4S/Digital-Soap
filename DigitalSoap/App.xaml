        <sys:TimeSpan x:Key="ButtonHighlightOffset0">00:00:00.0625</sys:TimeSpan>
        <sys:TimeSpan x:Key="ButtonHighlightOffset1">00:00:00.1250</sys:TimeSpan>
        <sys:TimeSpan x:Key="ButtonHighlightOffset2">00:00:00.1875</sys:TimeSpan>
        <sys:TimeSpan x:Key="ButtonHighlightOffset3">00:00:00.2500</sys:TimeSpan>
        
        <LinearGradientBrush x:Key="VerticalGradientFill"
                             StartPoint="0,0" EndPoint="0.5,1">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="{DynamicResource Dark_ControlSurface}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource Dark_ControlSurface}" Offset="0.33"/>
                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="1.0"/>
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonGradientFill"
                     StartPoint="0,0" EndPoint="0.0,1">
            <LinearGradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource Dark_ControlSurface}" Offset="0.28"/>
                    <GradientStop Color="{DynamicResource Dark_ControlSurface}" Offset="0.4"/>
                    <GradientStop Color="{DynamicResource Dark_Control}" Offset="1.0"/>
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonPressedGradientFill"
             StartPoint="0,0" EndPoint="0,1">
