                    <GradientStop Color="#0018B2DC"
                    Offset="0" />
                    <GradientStop Color="#9018B2DC"
                    Offset="0.45" />
                    <GradientStop Color="#9018B2DC"
                    Offset="0.55" />
                    <GradientStop Color="#0018B2DC"
                    Offset="1" />
                </GradientStopCollection>
            </LinearGradientBrush.GradientStops>
