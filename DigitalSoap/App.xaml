                                                            RepeatBehavior="1x"
                                                            From="{StaticResource Dark_SecondaryDark}"
                                                            To="{StaticResource Dark_SecondaryLight}"
                                                            AutoReverse="False"
                                                            BeginTime="{StaticResource ButtonHighlightOffset2}"/>

                                            <ColorAnimation Storyboard.TargetName="ButtonBorderBrush"
                                                            Storyboard.TargetProperty="(GradientBrush.GradientStops)[0].(GradientStop.Color)"
