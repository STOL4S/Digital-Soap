            <Setter Property="Foreground" Value="{DynamicResource Dark_TextLightBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="Border" Margin="0,0,0,0"
                                Background="{DynamicResource ButtonGradientFill}"
                                BorderThickness="1" CornerRadius="3">
                            <Border.BorderBrush>
                                <LinearGradientBrush x:Name="ButtonBorderBrush" Opacity="1">
                                    <LinearGradientBrush.GradientStops>
                                        <GradientStopCollection>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.000"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.125"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.250"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.375"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.500"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.625"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.750"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="0.875"/>
                                            <GradientStop Color="{DynamicResource Dark_Border}" Offset="1.000"/>
                                        </GradientStopCollection>
                                    </LinearGradientBrush.GradientStops>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
