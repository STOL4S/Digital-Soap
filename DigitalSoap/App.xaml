        <Color x:Key="PrimaryColorDark">#393939</Color>
        <Color x:Key="PrimaryColorLight">#999999</Color>
        <Color x:Key="PrimaryColorHighLight">#C9C9C9</Color>
        <Color x:Key="PrimaryColorBright">#F4F4F4</Color>
